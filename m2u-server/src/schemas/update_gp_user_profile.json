{
  "title": "Update User Profile Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "phone": {
      "type": "number"
    },
    "otp": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "lat": {
      "type": "number"
    },
    "lng": {
      "type": "number"
    },
    "state": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "postCode": {
      "type": "string"
    },
    "nricNumber": {
      "type": "string"
    },
    "passportNumber": {
      "type": "string"
    },
    "idProof": {
      "type": "string"
    },
    "eSign": {
      "type": ["object", "string"]
    },
    "isESign": {
      "type": "boolean"
    },
    "passportSizePhoto": {
      "type": ["object", "string"]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "idProof": { "const": "PASSPORT_NUMBER" }
        },
        "required": ["idProof"]
      },
      "then": {
        "required": ["passportNumber"]
      }
    },
    {
      "if": {
        "properties": {
          "idProof": { "const": "NRIC_NUMBER" }
        },
        "required": ["idProof"]
      },
      "then": {
        "required": ["nricNumber"],
        "properties": {
          "nricNumber": {
            "type": "string",
            "pattern": "^[0-9]{12}$"
          }
        }
      }
    }
  ],
  "required": [
    "name",
    "phone",
    "city",
    "state",
    "address",
    "postCode",
    "idProof"
  ]
}
